{
  "name": "@docuflow/database",
  "version": "1.0.0",
  "description": "Database layer for Docuflow with Prisma",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "test": "vitest",
    "test:run": "vitest run",
    "test:typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "prisma": "^5.15.0",

    "@docuflow/shared": "workspace:*"
  },
  "devDependencies": {
    "prisma": "^7.0.1",
    "typescript": "^5.6.3",
    "vitest": "^3.2.0"
  }
}